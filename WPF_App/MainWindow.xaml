<Window x:Class="DeskManagementStand_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeskManagementStand_App"
        xmlns:userControls="clr-namespace:DeskManagementStand_App.View.UserControls"
        xmlns:vm="clr-namespace:DeskManagementStand_App.ViewModel"
        mc:Ignorable="d"
        Background="#333333"
        Title="MainWindow" Height="1000" Width="1000">
    
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <!--Menu Bar User Controls-->
            <userControls:MenuBar/>
        </Grid>
        <Grid Grid.Row="1">
            <!--Color Selection User Control-->
            <userControls:ColorSelection DataContext="{Binding ColorSelectorViewModel}"/>
        </Grid>

        <Grid Grid.Row="2">
            <userControls:ChargingModule/>
        </Grid>


        <Grid Grid.Row="4">
            <StackPanel>
                <Button x:Name="ConnectButton" Content="Połącz z Raspberry Pi"
                        Click="ConnectButton_Click" Margin="0 0 0 10"
                        Height="50" Width="300"/>
                <Button x:Name="DisconnectButton" Content="Rołącz z Raspberry Pi"
                        Click="DisconnectButton_Click" Margin="0 0 0 10"
                        Height="50" Width="300"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="5">
            <StackPanel>
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <TextBox Name="MessagesTextBox"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     AcceptsReturn="True"
                     FontFamily="Consolas"
                     FontSize="14"
                     Background="#1E1E1E"
                     Foreground="#DCDCAA"
                     BorderBrush="Gray"
                     Padding="10"
                     />
                </ScrollViewer>

                <!-- Status dolny -->
                <TextBlock Grid.Row="2"
                   Name="StatusTextBlock"
                   Text="Status: Niepołączony"
                   HorizontalAlignment="Left"
                   Margin="0,10,0,0"
                   FontStyle="Italic"
                   Foreground="Gray"/>
            </StackPanel>
        </Grid>






