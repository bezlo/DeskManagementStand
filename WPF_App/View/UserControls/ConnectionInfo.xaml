<Window x:Class="DeskManagementStand_App.View.UserControls.ConnectionInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeskManagementStand_App.View.UserControls"
        xmlns:vm="clr-namespace:DeskManagementStand_App.ViewModel"
        xmlns:userControls="clr-namespace:DeskManagementStand_App.View.UserControls"
        mc:Ignorable="d" Background="#333333"
        Title="ConnectionInfo" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="100"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" >
            <!--Menu Bar User Controls-->
            <userControls:MenuBar/>
        </Grid>
        <Grid Grid.Row="1" >
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" 
                        Height="60" Width="300">
                <Button Content="Zapisz" Style="{StaticResource PrimaryButton}" Padding="10,5"
                        />
                <Button Content="Usuń" Style="{StaticResource DangerButton}" Padding="10,5"/>
            </StackPanel>

        </Grid>

    </Grid>
</Window>
