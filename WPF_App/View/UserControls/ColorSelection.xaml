<UserControl x:Class="DeskManagementStand_App.View.UserControls.ColorSelection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeskManagementStand_App.View.UserControls"
             mc:Ignorable="d" Background="#333333"
             d:DesignHeight="160" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- Color Ring-->
        <Canvas x:Name="ColorRingCanvas" 
                Width="160" Height="160" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,0"
                MouseMove="ColorRingCanvas_MouseMove" >
            <Ellipse Width="160" Height="160" Stroke="Gray" 
                     StrokeThickness="20"  Canvas.Left="0" Canvas.Top="0"/>
        </Canvas>
        <!-- Led tape-->
        <Grid Grid.Column="1">
            <Canvas  Width="180" Height="40"  Background="Black" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ClipToBounds="True">
                <Canvas.LayoutTransform>
                    <ScaleTransform ScaleX="2" ScaleY="2"/>
                </Canvas.LayoutTransform>
                <!-- LED 1 -->
                <Ellipse Width="50" Height="50" Fill="{Binding SelectedColor}" Opacity="0.3" Canvas.Left="-5" Canvas.Top="-5">
                    <Ellipse.Effect>
                        <BlurEffect Radius="15"/>
                    </Ellipse.Effect>
                </Ellipse>
                <Ellipse Width="20" Height="20" Fill="{Binding SelectedColor}" Stroke="White" StrokeThickness="1" Canvas.Left="10" Canvas.Top="10"/>

                <!-- LED 2 -->
                <Ellipse Width="50" Height="50" Fill="{Binding SelectedColor}" Opacity="0.3" Canvas.Left="30" Canvas.Top="-5">
                    <Ellipse.Effect>
                        <BlurEffect Radius="15"/>
                    </Ellipse.Effect>
                </Ellipse>
                <Ellipse Width="20" Height="20" Fill="{Binding SelectedColor}" Stroke="White" StrokeThickness="1" Canvas.Left="45" Canvas.Top="10"/>

                <!-- LED 3 -->
                <Ellipse Width="50" Height="50" Fill="{Binding SelectedColor}" Opacity="0.3" Canvas.Left="65" Canvas.Top="-5">
                    <Ellipse.Effect>
                        <BlurEffect Radius="15"/>
                    </Ellipse.Effect>
                </Ellipse>
                <Ellipse Width="20" Height="20" Fill="{Binding SelectedColor}" Stroke="White" StrokeThickness="1" Canvas.Left="80" Canvas.Top="10"/>

                <!-- LED 4 -->
                <Ellipse Width="50" Height="50" Fill="{Binding SelectedColor}" Opacity="0.3" Canvas.Left="100" Canvas.Top="-5">
                    <Ellipse.Effect>
                        <BlurEffect Radius="15"/>
                    </Ellipse.Effect>
                </Ellipse>
                <Ellipse Width="20" Height="20" Fill="{Binding SelectedColor}" Stroke="White" StrokeThickness="1" Canvas.Left="115" Canvas.Top="10"/>

                <!-- LED 5 -->
                <Ellipse Width="50" Height="50" Fill="{Binding SelectedColor}" Opacity="0.3" Canvas.Left="135" Canvas.Top="-5" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Ellipse.Effect>
                        <BlurEffect Radius="15"/>
                    </Ellipse.Effect>
                </Ellipse>
                <Ellipse Width="20" Height="20" Fill="{Binding SelectedColor}" Stroke="White" StrokeThickness="1" Canvas.Left="150" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Center"/>

                <!-- sciezka miedziana -->
                <Rectangle Width="15" Height="4" Fill="#B87333" RadiusX="2" RadiusY="2" Panel.ZIndex="-1"
                           Canvas.Left="30" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <Rectangle Width="15" Height="4" Fill="#B87333" RadiusX="2" RadiusY="2" Panel.ZIndex="-1"
                           Canvas.Left="30" Canvas.Top="18" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <Rectangle Width="15" Height="4" Fill="#B87333" RadiusX="2" RadiusY="2" Panel.ZIndex="-1"
                           Canvas.Left="30" Canvas.Top="26" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <Rectangle Width="15" Height="4" Fill="#B87333" RadiusX="2" RadiusY="2" Panel.ZIndex="-1"
                           Canvas.Left="65" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <Rectangle Width="15" Height="4" Fill="#B87333" RadiusX="2" RadiusY="2" Panel.ZIndex="-1"
                    Canvas.Left="65" Canvas.Top="18" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <Rectangle Width="15" Height="4" Fill="#B87333" RadiusX="2" RadiusY="2" Panel.ZIndex="-1"
                    Canvas.Left="65" Canvas.Top="26" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <Rectangle Width="15" Height="4" Fill="#B87333" RadiusX="2" RadiusY="2" Panel.ZIndex="-1"
                    Canvas.Left="100" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <Rectangle Width="15" Height="4" Fill="#B87333" RadiusX="2" RadiusY="2" Panel.ZIndex="-1"
                    Canvas.Left="100" Canvas.Top="18" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <Rectangle Width="15" Height="4" Fill="#B87333" RadiusX="2" RadiusY="2" Panel.ZIndex="-1"
                    Canvas.Left="100" Canvas.Top="26" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <Rectangle Width="15" Height="4" Fill="#B87333" RadiusX="2" RadiusY="2" Panel.ZIndex="-1"
                    Canvas.Left="135" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <Rectangle Width="15" Height="4" Fill="#B87333" RadiusX="2" RadiusY="2" Panel.ZIndex="-1"
                    Canvas.Left="135" Canvas.Top="18" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <Rectangle Width="15" Height="4" Fill="#B87333" RadiusX="2" RadiusY="2" Panel.ZIndex="-1"
                    Canvas.Left="135" Canvas.Top="26" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <Rectangle Width="10" Height="4" Fill="#B87333" RadiusX="2" RadiusY="2" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Center" Panel.ZIndex="-1"/>
                <Rectangle Width="10" Height="4" Fill="#B87333" RadiusX="2" RadiusY="2" Canvas.Top="18" HorizontalAlignment="Center" VerticalAlignment="Top" Panel.ZIndex="-1"/>
                <Rectangle Width="10" Height="4" Fill="#B87333" RadiusX="2" RadiusY="2" Canvas.Top="26" HorizontalAlignment="Center" VerticalAlignment="Top" Panel.ZIndex="-1"/>
                <Rectangle Width="10" Height="4" Fill="#B87333" RadiusX="2" RadiusY="2" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Left="170" Panel.ZIndex="-1"/>
                <Rectangle Width="10" Height="4" Fill="#B87333" RadiusX="2" RadiusY="2" Canvas.Top="18" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="170" Panel.ZIndex="-1"/>
                <Rectangle Width="10" Height="4" Fill="#B87333" RadiusX="2" RadiusY="2" Canvas.Top="26" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="170" Panel.ZIndex="-1"/>
            </Canvas>

        </Grid>

    </Grid>
</UserControl>
