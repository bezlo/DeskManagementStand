<UserControl x:Class="DeskManagementStand_App.View.UserControls.MenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeskManagementStand_App.View.UserControls"
             mc:Ignorable="d" Background="#333333"
             Height="30" d:DesignWidth="800">
    
    
        <Menu>
            <MenuItem Header="Home">
                <MenuItem Header="RGB settings"/>
                <MenuItem Header="Power settings"/>
                <MenuItem Header="Exit" Command="{Binding CloseAppCommand}"/>
            </MenuItem>
            <MenuItem Header="Info">
                <MenuItem Header="Connection info"/>
                <MenuItem Header="About"/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About"/>
            </MenuItem>
        </Menu>
    
</UserControl>
